<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width = "match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_bottom_gray"
        android:layout_marginLeft="@dimen/CV_padding_left"
        android:layout_marginRight="@dimen/RV_padding_right">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/civ_mascota_fav"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/schnauzer"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A" />

        <TextView
            android:id="@+id/tv_mascota_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="NOMBRE"
            android:gravity="center"
            android:paddingBottom="@dimen/CV_padding"
            android:paddingTop="@dimen/CV_padding"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_pet_grid_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/RV_padding_right">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>